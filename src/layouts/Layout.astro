---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	@import url('https://fonts.googleapis.com/css2?family=Outfit:wght@100..900&family=Yuji+Syuku&display=swap');
	:root {
		--primary: #0ea2d7;
		--secondary: #fff;
		--light-accent: #e5f3fb;
		--dark-accent: #2e4392;
		--text-color: #131a2d;
		--paragraph-color: #666666;
		--paragraph-color-2: #ccc;
	}
	* {
		padding: 0;
		margin: 0;
		box-sizing: border-box;
	}
	html {
		font-family: 'Outfit';
		background: var(--secondary);
		font-size: 62.5%;
		width: 100%;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
	body {
		width: 100%;
	}
	p {
		font-size: 1.8rem;
		font-weight: 400;
		line-height: 1.8;
		color: var(--paragraph-color);
	}
	a {
		text-decoration: none;
	}
	h1 {
		font-size: 5.5rem;
		font-weight: 700;
		line-height: 1.2;
	}
	h2 {
		font-size: 4.5rem;
		font-weight: 700;
		line-height: 1.2;
	}
	h3 {
		font-size: 3.5rem;
		font-weight: 700;
		line-height: 1.2;
	}
</style>
